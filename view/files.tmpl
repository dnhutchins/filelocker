                        </tr>
                        <tr>
                            <td></td>
                            <td colspan="5" class="dotted"></td>
                        </tr>
                    </thead>
                    <tbody id="uploadRequestsTable">
                    #for $uploadRequest in $uploadRequests
                    <tr class="fileRow">
